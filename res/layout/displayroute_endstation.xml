<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/train" />

    <RadioGroup
        android:id="@+id/displayroute_endstation_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:layout_marginLeft="37dp" >

        <RadioButton
            android:id="@+id/displayroute_endstation_front"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="#fff"
            android:text="Vorne"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/displayroute_endstation_middle"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Mitte"
            android:textColor="#fff"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/displayroute_endstation_back"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg"
            android:button="@null"
            android:gravity="center"
            android:textColor="#fff"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="Hinten"
            android:textSize="16sp" />
    </RadioGroup>

    <ViewFlipper
        android:id="@+id/displayroute_endstation_flipper"
        android:layout_width="match_parent"
        android:layout_marginLeft="37dp"
        android:layout_height="wrap_content" >
    </ViewFlipper>

</LinearLayout>